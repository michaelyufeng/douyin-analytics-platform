# Application settings
APP_NAME="Douyin Analytics Platform"
APP_VERSION="1.0.0"
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8080

# Database (SQLite default, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./douyin_analytics.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/douyin_analytics

# Redis (optional, disable if not available)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Douyin API Configuration
# IMPORTANT: Set your Douyin cookie here for API access
DOUYIN_COOKIE=""
DOUYIN_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"

# Request settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Task scheduler
SCHEDULER_ENABLED=true
DEFAULT_MONITOR_INTERVAL=3600

# Download settings
DOWNLOAD_DIR=./downloads
MAX_CONCURRENT_DOWNLOADS=5

# CORS
CORS_ORIGINS=["http://localhost:8081", "http://119.28.204.113:8081"]

# Logging
LOG_LEVEL=INFO
# LOG_FILE=./logs/app.log
